{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "id": "http://www.popoloproject.com/schemas/link.json#",
  "title": "Link",
  "description": "A URL",
  "type": "object",
  "properties": {
    "url": {
      "description": "A URL",
      "type": ["string", "object"],
      "format": "uri",
      "required": true
    },
    "note": {
      "description": "A note, e.g. 'Wikipedia page'",
      "type": ["string", "object", "null"]
    }
  }
}
